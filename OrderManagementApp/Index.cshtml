@model IEnumerable<baithi.Models.Order>

@{
    ViewData["Title"] = "Orders List";
}

<h2>Orders List</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Order</a>
</p>

<form method="get" asp-action="Index">
    <input type="text" name="searchString" value="@ViewBag.SearchString" placeholder="Search by Order Number or Customer Name" class="form-control" style="width:300px; display:inline-block;" />
    <input type="submit" value="Search" class="btn btn-primary" />
</form>

<p>Total Records: @ViewBag.TotalRecords</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Order Number</th>
            <th>Customer Name</th>
            <th>Customer Email</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderNumber</td>
            <td>@order.CustomerName</td>
            <td>@order.CustomerEmail</td>
            <td>@order.Product?.Name</td>
            <td>@order.Quantity</td>
            <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
            <td>@(order.DeliveryDate.HasValue ? "Delivered" : "Pending")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-primary btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@ViewBag.SearchString">@i</a>
            </li>
        }
    </ul>
</nav>