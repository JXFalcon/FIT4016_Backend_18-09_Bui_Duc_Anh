@model baithi.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h2>Delete Order</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<h3>Are you sure you want to delete this order?</h3>

<div>
    <h4>Order Number: @Model.OrderNumber</h4>
    <h4>Customer Name: @Model.CustomerName</h4>
    <h4>Customer Email: @Model.CustomerEmail</h4>
    <h4>Product: @Model.Product?.Name</h4>
    <h4>Quantity: @Model.Quantity</h4>
    <h4>Order Date: @Model.OrderDate.ToString("yyyy-MM-dd")</h4>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mt-3">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>